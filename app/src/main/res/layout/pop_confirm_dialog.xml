<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120"
        android:background="@drawable/pop_hei"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="#fff"
            android:gravity="center"
            android:text="提示"
            android:textColor="#519AF0"
            android:textSize="16dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text=""
            android:textColor="#333333"
            android:textSize="14dp"
            tools:ignore="InefficientWeight,SpUsage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnQuXiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginRight="@dimen/x30"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#fff"
                android:text="取消"
                android:textColor="#333333"
                android:textSize="16dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/btnQueDing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#fff"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="16dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
